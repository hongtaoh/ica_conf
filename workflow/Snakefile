        # PAPER_2014_2018,
        # INTERACTIVE_SESSION_2014_2018,
        # INTERACTIVE_AUTHOR_2014_2018,
        # INTERACTIVE_PAPER_2014_2018,
        PAPERS_DF,
        AUTHORS_DF,
        SESSIONS_DF,
        PAPERS_JSON,
        AUTHORS_JSON,
        SESSIONS_JSON,
        INDEXED_PAPERS_JSON,
        SESSIONID_PAPERS_JSON,  
        AUTHOR_PAPER_IDS_JSON,   
        PAPER_EMBEDDINGS_JSON

